<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/spacing_large"
    android:focusable="true"
    android:clickable="true"
    android:background="@drawable/payment_border_selected"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="@dimen/spacing_large">

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp" />

    <View
        android:layout_width="@dimen/spacing_middle"
        android:layout_height="0dp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Paypal - Payment Gateway"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            android:textColor="@color/defaultBlackColor"
            android:textStyle="bold" />

        <View
            android:layout_width="@dimen/spacing_middle"
            android:layout_height="0dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pay using PayPal.com"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/grey_60" />

    </LinearLayout>

    <View
        android:layout_width="@dimen/spacing_middle"
        android:layout_height="0dp" />


    <ImageView
        android:id="@+id/icon_checked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:tint="@color/lightGreen"
        app:srcCompat="@drawable/ic_check_circle_black" />

</LinearLayout>